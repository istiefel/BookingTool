@model BookingTool.Models.PartialBooking

@{
    ViewBag.Title = "MarkAsPaid";
}

<h2>Bezahlt markieren</h2>

<h3>Buchung wirklich bezahlt markieren?</h3>
<fieldset>
    <legend>PartialBooking</legend>
    <div>
        <h3>@Html.DisplayNameFor(model => model.Booking.Name)</h3>
        @Html.DisplayFor(model => model.Booking.Name)
    </div>
    <div>
        <h3>@Html.DisplayNameFor(model => model.Booking.DateBooked)</h3>
        @Html.DisplayFor(model => model.Booking.DateBooked)        
    </div>
    <div>
        <h3>@Html.DisplayNameFor(model => model.Sender)</h3>
        @Html.DisplayFor(model => model.Sender)
    </div>
    <div>
        <h3>@Html.DisplayNameFor(model => model.Recipient)</h3>
        @Html.DisplayFor(model => model.Recipient)
    </div>
