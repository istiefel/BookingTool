@using BookingTool.Models
@model IEnumerable<BookingTool.Models.SharePartialBooking>

@{
    ViewBag.Title = "SharePartialBookings";
}

<table class="partial-bookings">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShareBookingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShareBooking.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShareBooking.DateBooked)
        </th>
        <th>
            Person Opposite
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShareBookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShareBooking.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShareBooking.DateBooked)
            </td>
            <td>
                @item.PersonOpposite(User.Identity.Name)
            </td>
            <td>
                @item.GetComputedAmount(User.Identity.Name) <span>&euro;</span>
            </td>
            <td>
                @if (item.Sender == User.Identity.Name) {
                     @Html.ActionLink("Bezahlt", "Delete", new { id=item.Id })
                } 
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

